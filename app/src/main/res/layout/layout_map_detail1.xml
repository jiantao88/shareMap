<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/dp_2"
    app:cardElevation="@dimen/dp_2"
    android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent" android:layout_height="@dimen/dp_310"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_map_detail"
            android:layout_width="match_parent" android:layout_height="@dimen/dp_200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_icon"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_80"
                        app:layout_constraintBottom_toBottomOf="@id/iv_map_detail"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/iv_map_detail_user"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15" tools:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/tv_map_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@id/iv_map_detail_user"
                android:text="@string/app_name" android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_chat_black"
                android:gravity="center" android:text="0"/>
            <TextView
                android:id="@+id/tv_favor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toLeftOf="@id/tv_chat"
                android:textColor="@color/white"
                android:drawableStart="@drawable/ic_favor" android:gravity="center"
                android:text="1"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_map_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:text="地图分享" android:textSize="@dimen/sp_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_map_detail"/>

        <TextView
            android:id="@+id/tv_map_sub_title"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintStart_toStartOf="@+id/tv_map_title"
            app:layout_constraintTop_toBottomOf="@id/tv_map_title"
            tools:text="sdsdsdsd"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>