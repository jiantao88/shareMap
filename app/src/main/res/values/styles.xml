<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--定义Toolbar样式-->
    <style name="ToolBarStyle" parent="@style/ThemeOverlay.AppCompat">
        <!--toolbar 标题和溢出菜单按钮字体的颜色-->
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <!--系统图标的颜色-->
        <item name="android:textColorSecondary">@color/white</item>
        <!--actionbar 按下效果-->
        <!--<item name="android:actionBarItemBackground">@drawable/action_bar_bg_selector</item>-->
        <!--自定义溢出的menu样式-->
        <item name="actionOverflowMenuStyle">@style/overflowMenuStyle</item>
        <!--弹出菜单字体颜色-->
        <item name="android:textColor">@android:color/black</item>
    </style>


    <!--溢出菜单样式-->
    <style name="overflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownWidth">wrap_content</item>
        <!--设置不覆盖锚点-->
        <item name="overlapAnchor">false</item>
        <!--popmenu背景色-->
        <item name="android:popupBackground">@color/white</item>
        <!--偏移量-->
        <item name="android:dropDownVerticalOffset">-4dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!--menu菜单按下效果-->.
        <!--<item name="android:selectableItemBackground">@drawable/menu_bg_selector</item>-->
    </style>

    //定义ProgressBar大小

    <style name="LoadingProgressStyle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:minWidth">20dp</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="fabButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="borderWidth">0dp</item>
        <item name="pressedTranslationZ">@dimen/dp_12</item>
        <item name="rippleColor">#a6a6a6</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_show_anim</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_hidden_anim</item>
    </style>

</resources>
